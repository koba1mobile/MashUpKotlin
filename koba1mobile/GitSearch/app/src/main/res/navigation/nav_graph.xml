<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HistoryFragment">

    <fragment
        android:id="@+id/HistoryFragment"
        android:name="com.example.gitsearch.history.HistoryFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_HistoryFragment_to_SearchFragment"
            app:destination="@id/SearchFragment" />

        <action
            android:id="@+id/action_HistoryFragment_to_UserInfoFragment"
            app:destination="@id/UserInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/SearchFragment"
        android:name="com.example.gitsearch.search.SearchFragment"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_SearchFragment_to_HistoryFragment"
            app:destination="@id/HistoryFragment" />

        <action
            android:id="@+id/action_SearchFragment_to_UserInfoFragment"
            app:destination="@id/UserInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/UserInfoFragment"
        android:name="com.example.gitsearch.user.UserInfoFragment"
        tools:layout="@layout/fragment_user_info">

        <action
            android:id="@+id/action_UserInfoFragment_to_HistoryFragment"
            app:destination="@id/HistoryFragment" />

        <action
            android:id="@+id/action_UserInfoFragment_to_SearchFragment"
            app:destination="@id/SearchFragment" />
    </fragment>
</navigation>
